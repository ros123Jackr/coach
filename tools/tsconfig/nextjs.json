{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Next.js",
	"extends": "./base.json",
	"compilerOptions": {
		"target": "es5",
		"noEmit": true,
		"allowJs": true,
		"module": "esnext",
		"jsx": "preserve",
		"incremental": true,
		"declaration": false,
		"declarationMap": false,
		"resolveJsonModule": true,
		"moduleResolution": "Bundler",
		"lib": ["dom", "dom.iterable", "esnext"]
	},
	"include": ["src", "next-env.d.ts"],
	"exclude": ["node_modules"]
}
